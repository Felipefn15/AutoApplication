# === Groq API Configuration ===
GROQ_API_KEY=your-groq-api-key

# === Email Configuration (for auto-apply) ===
# Opção 1: Resend (https://resend.com/)
RESEND_API_KEY=your-resend-api-key
RESEND_SENDER_EMAIL=your-verified-sender@email.com

# OU

# Opção 2: SMTP (Gmail, Brevo etc)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# === Scraping Configuration ===
SCRAPING_INTERVAL_MINUTES=60
MAX_JOBS_PER_SCRAPE=100

# Cron Jobs
CRON_SECRET=your_cron_secret # Used to authenticate cron job requests

# Outros
NODE_ENV=development 